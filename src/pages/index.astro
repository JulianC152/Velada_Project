<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>La Velada Del Año</title>
	</head>
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-gray-700 via-gray-900 to-black"></div>  
	<body>
		<header class="relative">
      <div class="md:absolute md:left-1/2 md:-translate-x-1/2 flex flex-col gap-1 justify-center items-center mt-4 md:mt-0 md:top-5 z-10">
        <img
        class="w-32 lg:w-64 h-auto" 
        src="../../public/logo.webp" alt="" >
        
        <h1 class="font-boxing text-5xl uppercase text-center text-white font-bold top-8">
          <span class="bg-clip-text text-transparent bg-gradient-to-b from-indigo-200 via-slate-400 to-indigo-200 inline-block leading-relaxed" >La Velada Del Año III</span>
        </h1>
      </div>
    </header>

    <main class="relative">
      <section id="boxers" 
        class={`flex justify-between relative 
                [&>div>img]:absolute 
                [&>div>img]:botton-100 
                [&>div>img]:w-auto
                h-[40vh] md:h-[65vh] lg:h-screen pt-4 lg:pt-24 border-b border-white/10`}>

        

        <div class=" relative w-full">
          <img class="left-[0%]  bottom-[0%] h-[100%] z-50 animate-fade-right" src="../../public/boxers/coscu.webp" alt="coscu">
          <img class="left-[3%]  bottom-[0%] h-[80%] z-40 animate-delay-300 animate-fade-right" src="../../public/boxers/mayichi.webp" alt="mayichi">
          <img class="left-[12%] bottom-[0%] h-[75%] z-30 animate-delay-500 animate-fade-right" src="../../public/boxers/viruzz.webp" alt="viruzz">
          <img class="left-[25%] bottom-[0%] h-[68%] z-20 animate-delay-700 animate-fade-right [clip-path:polygon(69%_27%,_83%_30%,_85%_72%,_100%_100%,_0_100%,_0_0,_80%_0)]" src="../../public/boxers/fernanfloo.webp" alt="fernanfloo">
          <img class="left-[35%] bottom-[0%] h-[65%] z-10 animate-delay-1000 animate-fade-right" src="../../public/boxers/la-rivers.webp" alt="La_rivers">
          <img class="left-[40%] bottom-[0%] h-[63%] z-0 animate-delay-[1300ms] animate-fade-right" src="../../public/boxers/papigavi.webp" alt="papigavi">
        </div>
        <div class="relative w-full">
          <img class="right-[0%]  bottom-[0%] h-[100%] z-50 animate-fade-left" src="../../public/boxers/german.webp" alt="german">
          <img class="right-[5%]  bottom-[0%] h-[80%] z-40 animate-delay-300 animate-fade-left [clip-path:polygon(15%_0,_46%_25%,_25%_39%,_35%_61%,_0_100%,_100%_100%,_100%_0%)]" src="../../public/boxers/amouranth.webp" alt="amouranth">
          <img class="right-[15%] bottom-[3%] h-[75%] z-30 animate-delay-500 animate-fade-left" src="../../public/boxers/shelao.webp" alt="shelao">
          <img class="right-[25%] bottom-[0%] h-[68%] z-20 animate-delay-700 animate-fade-left" src="../../public/boxers/luzu.webp" alt="luzu">
          <img class="right-[35%] bottom-[0%] h-[65%] z-10 animate-delay-1000 animate-fade-left" src="../../public/boxers/rivers.webp" alt="rivers">
          <img class="right-[40%] bottom-[0%] h-[63%] z-0 animate-delay-[1300ms] animate-fade-left" src="../../public/boxers/ampeter.webp" alt="ampeter">
          
        </div>
      </section>
      <div id="info" class="absolute lg:bottom-48 z-50 mx-auto left-[50%] -translate-x-1/2 ">
        <div class=""><!-- flex flex-col text-center bg-gradient-to-t from-gray-900 to-gray-600 bg-gradient-to-r -->
          <div class="px-5 pt-3 pb-2 text-white animate-fade-up animate-delay-[1000ms]  animate-ease-in-out p-6 inline leading-relaxed">
            <h2 class="text-7xl font-boxing ">1 de Julio</h2>
          </div>
          <div class="px-5 pt-2 pb-1 text-white text-center animate-fade-up animate-delay-[600ms] animate-ease-in-out group cursor-pointer p-6">
            <div class="hover:scale-105 transition text-center">
              <a href="https://www.twitch.tv/ibai" target="_blank" rel="noopener noreferrer" class="text-[20px] group-hover:text-[#F48935] font-boxing ">https://www.twitch.tv/ibai</a>
            </div>
          </div>
          <div class="px-5 pt-2 pb-1 text-white text-center animate-fade-up animate-delay-[200ms] animate-ease-in-out group cursor-pointer ">
            <div class="hover:scale-110 transition">
              <a href="https://www.twitch.tv/ibai" target="_blank" rel="noopener noreferrer" class="text-[20px] group-hover:text-[#F48935] font-boxing ">Entradas</a>
            </div>
          </div>
        </div>
      </div> 

      <div id="combat" class="absolute lg:bottom-48 z-40 mx-auto left-[50%] -translate-x-1/2 flex flex-col gap-y-24 opacity-0">
        <div class="px-5 pt-4 pb-2 text-white text-center">
          <h2 class="text-6xl font-boxing-striped">COSCU</h2>
        </div>

        <span class="text-5xl font-boxing left-1/2 -translate-x-1/2 top-1/2 -translate-y-1/2 text-[#F48935] block absolute drop-shadow-[2px_2px_var(--tw-shadow-color)] shadow-yellow-500 ">
          VS
        </span>

        <div class="px-5 pt-4 pb-2 text-white text-center">
          <h2 class="text-6xl font-boxing-striped">GERMAN</h2>
        </div>
      </div>
    </main>

    <footer>

    </footer>
	</body>
</html>
<style is:global>
  body{
    background-color: black;
  }

  @font-face {
    font-family: 'Boxing';
    src: url('/fonts/boxing.woff2');
    font-weight: bold;
  }
  @font-face {
    font-family: 'boxing Striped';
    src: url('/fonts/boxing-striped.woff2');
    font-weight: bold;
  }
</style>

<script>
  const $boxers = document.querySelector('#boxers')
  const $boxersImages = $boxers.querySelectorAll('img')

  const $info = document.querySelector('#info')
  const $combat = document.querySelector('#combat')

  $boxersImages.forEach($img => {
    $img.addEventListener('mouseenter', ()=>{
      //Quitamos efectos cuando dejamos de seleccionar un boxer
      $img.addEventListener('mouseleave', () => {
        $boxersImages.forEach($img => {
          $img.setAttribute("style", "transition: all 1s ease-in-out")
          $info.setAttribute('style', 'opacity:1; transition: all .6s ease-in-out')
          $combat.setAttribute('style', 'opacity:0; transition: all .6s ease-in-out')
          const [firstBoxer, SecondBoxer] = $combat.querySelectorAll('h2')
          firstBoxer.innerText = leftBoxer.alt
          SecondBoxer.innerText = rightBoxer.alt
          
        }
      )})
      const sectionImages = $img.parentNode.children
      const position = Array.from(sectionImages).indexOf($img)
       //Obtener la posicion de la izquierda y derecha
       const[leftBoxer, rightBoxer] = [
          $boxersImages[position], //Izquierda
          $boxersImages[position + $boxersImages.length / 2] //Derecha
       ]
      //Ocultamos id=Info
      $info.setAttribute('style', 'opacity:0; transition: all .5s ease-in-out')
      $combat.setAttribute('style', 'opacity:1; transition: all .5s ease-in-out')
      const [firstBoxer, SecondBoxer] = $combat.querySelectorAll('h2')
      firstBoxer.innerText = leftBoxer.alt
      SecondBoxer.innerText = rightBoxer.alt

      //Ocultar boxers que no he seleccionado
       $boxersImages.forEach($img =>{
        $img.setAttribute(
        'style',
        'filter: blur(2px) grayscale(.8); transition: all 1s'
        )
       })

       leftBoxer.setAttribute(
        'style',
        'scale: 1.05; filter:contrast(1.1); transition all 1s ease-in-out' 
       )
       rightBoxer.setAttribute(
        'style',
        'scale: 1.05; filter:contrast(1.1); transition all 1s ease-in-out' 
       )
    })
  });

</script>